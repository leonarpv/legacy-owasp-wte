<bindings id="spinbuttonsBindings"
	 xmlns="http://www.mozilla.org/xbl"
	 xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	 xmlns:xbl="http://www.mozilla.org/xbl">

	<binding id="spinbuttonsH"
		 extends="chrome://cookiesmanagerplus/skin/spinbuttonsH.xml#spinbuttonsH-baseline">
		<resources>
			<stylesheet src="chrome://cookiesmanagerplus/skin/editCookie.css"/>
		</resources>
	</binding>

	<binding id="spinbuttonsH-baseline">
		<content>
			<xul:hbox flex="1" align="center">
				<xul:spacer flex="1"/>
				<xul:image xbl:inherits="onclick=onup, id, disabled" anonid="upButton" class="up"/>
				<xul:spacer flex="1"/>
				<xul:image xbl:inherits="onclick=ondown, id, disabled" anonid="downButton" class="down"/>
				<xul:spacer flex="1"/>
			</xul:hbox>
		</content>
	</binding>

</bindings>

