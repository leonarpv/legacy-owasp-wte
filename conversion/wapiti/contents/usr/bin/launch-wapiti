#!/bin/bash

# Possible terminal emulators - using full path to stop path games by the naughty
TERMINALS="/usr/bin/xfce4-terminal /usr/bin/gnome-terminal /usr/bin/konsole /usr/bin/xfce4-terminal"
FOUND=0

# Run through the terminal to try and launch one that works
for t in $TERMINALS
do
    type -P $t &>/dev/null && FOUND=1
    if [ $FOUND -eq 1 ]; then
        TERM=${t#/usr/bin/}
        break
    fi
done

case "$TERM" in
    xfce4-terminal)
        /usr/bin/xfce4-terminal --command=/usr/bin/startup-wapiti --hold --title "OWASP Wapiti Scanner"
        exit 0
        ;;
    gnome-terminal)
        /usr/bin/gnome-terminal -x bash -c "/usr/bin/startup-wapiti"
        exit 0
        ;;
    konsole)
        /usr/bin/konsole --no--close -T "OWASP Wapiti Scanner" -e /usr/bin/startup-wapiti
        exit 0
        ;;
    *)
        notify-send "I can't find a terminal so please open your favorite one
and you'll find wapiti in the path already."
esac

