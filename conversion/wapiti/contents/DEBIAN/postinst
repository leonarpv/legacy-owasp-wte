#!/bin/sh

# Register the icons needed for Wapiti and the OWASP menu
xdg-icon-resource install --size 64 /tmp/owasp-wte-wapiti/owasp-wte-menu-icon.png owasp-wte-menu-icon
xdg-icon-resource install --size 64 /tmp/owasp-wte-wapiti/owasp-wte-wapiti-icon.png owasp-wte-wapiti-icon 

# Create the necessary menu entries
xdg-desktop-menu install /tmp/owasp-wte-wapiti/owasp-owasp.directory \
                         /tmp/owasp-wte-wapiti/owasp-scanners.directory \
                         /tmp/owasp-wte-wapiti/owasp-wte-wapiti.desktop

# Cleanup /tmp
rm -rf /tmp/owasp-wte-wapiti
