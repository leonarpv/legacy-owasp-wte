#!/bin/sh

# Register the icons needed for owasp-wte-doc and the OWASP menu
xdg-icon-resource install --size 64 /tmp/owasp-wte-doc/owasp-wte-menu-icon.png owasp-wte-menu-icon
xdg-icon-resource install --size 64 /tmp/owasp-wte-doc/owasp-wte-doc-icon.png owasp-wte-doc-icon 

# Create the necessary menu entries
xdg-desktop-menu install /tmp/owasp-wte-doc/owasp-owasp.directory \
                         /tmp/owasp-wte-doc/owasp-wte-doc.desktop

# Cleanup /tmp
rm -rf /tmp/owasp-wte-doc
